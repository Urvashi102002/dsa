class Solution {
    public int reverse(int x) {
        int result =0, resultNew=0;
        boolean isNegative = x<0;
        x= isNegative ? -x :x;

        while(x>0){
            resultNew = 10*result+ x%10;
            if(resultNew/10 != result){
                return 0;
            }
            result = resultNew;
            x/=10;
        }
        return isNegative ? -result :result;

    }
}
